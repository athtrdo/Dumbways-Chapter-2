<html>
    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="/public/style.css">
        <title> Edit Project</title>
    </head>
    <body>

        
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container">
                <!-- Left Side -->
              <a class="navbar-brand me -5" href="#">
                <img src="/public/img/logo.png" alt="">
              </a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link active nav-item-active" aria-current="page" href="Project/add">Add Project</a>
                  </li>
                </ul>
                <!-- End Left Side -->

                <!-- Right Side -->
                <a href="Contact-me" class="btn btn-darkblue text-white">Contact Me</a>
                <!-- End Right Side -->
              </div>
            </div>
          </nav>
        <!-- End Navbar -->

        <!-- Form -->
        <div class="form-contain d-flex justify-content-center align-items-center">
            <form action="/Project/edit/{{project.id}}" method="post">
                <h1 class="text-center mb-3">Edit Project</h1>
                <div class="mb-3">
                    <label for="input-project" class="form-project">Project Name</label>
                    <input 
                    type="text" 
                    class="form-control" 
                    id="input-project" 
                    name="name" 
                    placeholder="Your Project title"
                    value="{{project.name}}">
                    
                </div>
                <div class="input-date1">
                  <div class="left-date">
                    <label for="input-date-start">Start Date</label>
                    <input 
                    id="startDate" 
                    type="date" 
                    name="startDate" 
                    class="form-control"
                    value="{{project.starDate}}">
                  </div>
                  <div class="right-date">
                    <label for="input-date-end">End Date</label>
                    <input 
                    id="endDate" 
                    type="date" 
                    name="endDate" 
                    class="form-control"
                    value="{{project.endDate}}">
                  </div>
                </div>
                <div class="mb-3">
                    <label for="input-description" class="form-label">Description</label>
                    <textarea 
                    class="form-control" 
                    id="input-description" 
                    name="description" 
                    rows="4"
                    >{{project.description}}</textarea>
                </div>
                <div class="laft-side-checkbox">
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="React" value="React" name="Tech">
                    <label class="form-check-label" for="React">ReactJS</label>
                    <img src="/public/img/React.png" style="width: 30px;" alt="">
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="Node" value="Node" name="Tech" style="margin-left: -8px;">
                    <label class="form-check-label" for="Node" > NodeJS</label>
                    <img src="/public/img/Node.png" style="width: 30px;" alt="">
                  </div>
                </div>
                <div class="Right-side-checkbox">
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="Javascript" name="Tech" value="Javascript">
                    <label class="form-check-label" for="Javascript">Javascript</label>
                    <img src="/public/img/javascript.png" style="width: 30px;" alt="">
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="TS" name="Tech" value="TS">
                    <label class="form-check-label" for="TS">Typescript</label>
                    <img src="/public/img/TS.png" style="width: 30px;" alt="">
                  </div>
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label">Upload Image</label>
                    <input class="form-control" type="file" id="imageproject" name="image">
                </div>
                <div class="d-flex justify-content-end mt-3">
                    <button class="btn btn-darkblue text-white" type="submit" onclick="addProject()">Submit</button>
                </div>
            </form>
        </div>
        <!-- End Form -->

    </body>
</html>