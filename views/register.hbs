  <div class="form-Register d-flex justify-content-center align-items-center">

    <form class='form-container mt-5' action='/register' method='POST' style="width: 350px;">
        <h1 style="text-align: center;">Register Your Account</h1>
        <div>
            <label for='input-username' class='form-label'>Name</label>
            <input id='input-username' name="username" class='form-control' />
        </div>
        <div>
            <label for='input-email' class='form-label'>Email</label>
            <input id='input-email' name="email" class='form-control' />
        </div>
        <div>
            <label for='input-password' class='form-label'>Password</label>
            <input type="password" id='input-password' name="password" class='form-control' />
        </div>
        <div class=" d-flex justify-content-end mt-3">
            <button type='submit' class='btn btn-darkblue text-white'>Submit</button>
        </div>
    </form>
  </div>
    
